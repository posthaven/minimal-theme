<!DOCTYPE html>
<html class='no-js'>
  <head>
    <title>{{ request.page_title }}</title>

    <meta content='width=device-width,initial-scale=1' name='viewport'>

    <link href="{{ 'images/favicon.ico' | asset_url }}" rel='shortcut icon' type='image/x-icon'>
    <link href="//fonts.googleapis.com/css?family=Oxygen:400,700,300|Crimson+Text:400,400italic&amp;subset=latin,latin-ext"
          media="screen" rel="stylesheet" type="text/css" />
    {{ 'blog.css' | asset_url | stylesheet_tag }}

    {{ posthaven.includes_for_head }}
  </head>

  <body id='site_{{ site.id }}'>
    <div id='container'>
      {{ posthaven.user_menu }}

      <header id='topbar'>
        <a href="{{ posthaven.url }}"><div class='posthaven-tab'></div></a>
      </header>

      <div id='flash'>
        {% for alert in posthaven.alerts %}
          <div class="alert alert-{{ alert.type }}">
            {{ alert.message }}
          </div>
        {% endfor %}
      </div>

      <div id='main_container'>
        <div id="main">
          <h2>Private site</h2>

          <p>This site is private and password-protected. Please enter your password to continue.</p>

          {% form 'private' %}
        </div>
      </div>
    </div>

    {{ posthaven.includes_for_body }}
  </body>
</html>
