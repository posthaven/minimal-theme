<!DOCTYPE html>
<html class='no-js'>
    <head>
        <!-- Google Analytics -->

        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-63851501-2"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'UA-63851501-2');
        </script>

        <!-- meta tags -->

        <meta name="google-site-verification" content="-Vo1uOIjzn9ZIGPtzTo1kEJN8DLse4pnj_xhWnNXGew" />

        <meta content='width=device-width,initial-scale=1' name='viewport'>

        {{ meta_tags }}

        <!-- site icon -->

        <link href="{{ 'images/favicon.ico' | asset_url }}" rel='shortcut icon' type='image/x-icon'>

        <!--[if IE]>
            <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        <!-- stylesheets-->

        <!-- {{ 'blog.css' | asset_url | stylesheet_tag }} -->

        {{ 'tufte.css' | asset_url | stylesheet_tag }}

        {{ 'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' | stylesheet_tag }}

        {{ posthaven.includes_for_head }}

        <!-- page title -->

        <title>{{ request.page_title }}</title>

    </head>

    <body class='site-{{ site.id }}'>

        <!-- main site content -->

        <article>

            {{ content_for_layout }}
            
        </article>

        <!-- navigation, search, blogroll, tags, subscribe -->

        <footer>

            {% include 'nav_menu' %}

            {% form 'archive' %}

            {% include 'blogroll' %}
            
            {% include 'tags' %}  

            <!-- show an option to subscribe if enabled -->

            {% if site.subscription_enabled? %}
                {% form 'subscribe' include_prompt:true %}

                <a href="{{ site.feed_url }}">Subscribe to the feed</a>
            {% endif %}

        </footer>

        {{ posthaven.includes_for_body }}

    </body>
</html>
